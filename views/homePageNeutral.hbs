        </div>

        <div class="row best-selling-row">
            {{#each popularList}}
            <div class="col-md-3 col-margin item-container" id="{{this.ma_mat_hang}}">
                <div class="card-sl">
                    <div class="card-image">
                        <img src="{{this.img_url}}" />
                    </div>

